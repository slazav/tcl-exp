#!/usr/bin/wish

## Test timeplot
package require Exp

TimePlot pl .pl -ncols 2 -maxt 10
pack .pl -expand yes -fill both

proc add {} {
  set t [expr [clock milliseconds]/1000.0]
  set d1 [expr rand()]
  set d2 [expr rand()]
  pl add_data $t [list $d1 $d2]
  after 200 add
}


proc add_comm {} {
  set t [expr [clock milliseconds]/1000.0]
  pl add_comment $t "$t"
  after 5000 add_comm
}

add
add_comm